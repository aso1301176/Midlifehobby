<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="st.asojuku.ac.jp.midlifehobby.TopActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/TopText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:text="@string/TopText" />

        <ImageView
            android:id="@+id/BikeTopView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bike" />

        <ImageView
            android:id="@+id/ClimTopView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="119dp"
            android:src="@drawable/climbing" />

        <ImageView
            android:id="@+id/GolfTopView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/golf" />

        <ImageView
            android:id="@+id/GimTopView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/gim" />
    </LinearLayout>

</RelativeLayout>